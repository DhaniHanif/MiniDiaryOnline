<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dhani.myapplication.NewDiary">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/diaryText"
        android:background="#FFF9C8"
        android:divider="#D3D3D3"
        android:dividerHeight="1sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="text"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginRight="0dp"
        android:layout_toRightOf="@+id/textView2"
        android:layout_marginLeft="10dp"
        android:textColor="@color/background_material_dark"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/save"
        style="@style/btnStyleSandrift"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:textColor="@color/background_material_dark" />

    <Button
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancel_diary"
        android:onClick="CancelNewDiary"
        style="@style/btnStyleSandrift"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:textColor="@color/background_material_dark" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/isiDiary"
        android:background="#FFF9C8"
        android:divider="#D3D3D3"
        android:dividerHeight="1sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/save"
        android:layout_alignRight="@+id/diaryText"
        android:layout_alignEnd="@+id/diaryText"
        android:layout_below="@+id/textView3"
        android:layout_marginBottom="10dp"
        android:textColor="@color/background_material_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Isi Diary"
        android:id="@+id/textView3"
        android:layout_below="@+id/diaryText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/diaryText"
        android:layout_toStartOf="@+id/diaryText"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Judul Diary"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="5dp" />

</RelativeLayout>
